---
interface Props {
	title: string;
	svg: string;
	href: string;
	dark:boolean;
}

const { href, title, svg, dark } = Astro.props;

---

<a href={href} class="text-white text-center font-bold">
	<div class=`${dark?'bg-dark-grey':'bg-app-orange'} rounded-3xl p-5 flex justify-between gap-2 items-center w-36 h-36 flex-col shadow-main `>
		<img width="120" height="120" src={svg}>
		<p class=" pt-2">
			{title}
				</p>
	</div>

</a>